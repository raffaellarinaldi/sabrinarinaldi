<div uk-filter="target: .js-filter">
  <div class="uk-grid-small uk-flex-middle" uk-grid>
    <div class="uk-width-expand">
      <div class="uk-grid-small uk-grid-divider uk-child-width-auto" uk-grid>
        <div>
          <ul class="uk-subnav uk-subnav-pill" uk-margin>
            <li class="uk-active" uk-filter-control>
              <a href="#" uk-icon="icon: album"></a>
            </li>
          </ul>
        </div>
        <div>
          <ul class="uk-subnav uk-subnav-pill" uk-margin>
            {% for gallery in galleries %}
              {% assign gallery_title = gallery.album.title[lang] | downcase %}
              <li uk-filter-control="[data-tags*='{{ gallery_title }}']">
                <a href="#{{ gallery_title }}">
                  <span>{{ gallery.album.title[lang] }}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <div class="uk-width-auto uk-text-nowrap">
      <span class="uk-active" uk-filter-control="sort: data-name">
        <a class="uk-icon-link" href="#" uk-icon="icon: arrow-down"></a>
      </span>
      <span uk-filter-control="sort: data-name; order: desc">
        <a class="uk-icon-link" href="#" uk-icon="icon: arrow-up"></a>
      </span>
    </div>
  </div>
  <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l uk-text-center" uk-grid="masonry: true" uk-lightbox="animation: slide">
    {% for gallery in galleries %}
      {% assign gallery_path = 'assets/img/gallery/' | prepend: site.url | append: gallery.album.folder | append: '/' %}
      {% assign images = gallery.album.images | sort: 'weight' %}
      {% for image in images %}
        <li data-tags="{{ gallery.album.title[lang] | downcase }}" data-name="{{ image.title[lang] }}">
          <figure class="uk-card uk-card-default uk-card-body">
            <a href="{{ gallery_path | append: image.filename }}" data-caption="{{ image.title[lang] }}">
              <img data-src="{{ gallery_path | append: image.filename }}" alt="{{ image.title[lang] }}" uk-img>
            </a>
            <figcaption class="uk-padding">
              <h4>{{ image.title[lang] }}</h4>
              <p>
                {{ image.description[lang] }}
                {% if image.size and image.size != blank %} ({{ image.size }} cm){% endif %}
              </p>
            </figcaption>
          </figure>
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</div>
