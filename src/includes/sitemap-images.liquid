<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
	<url>
		<loc>{{ site.productionUrl | append: 'gallery/' }}</loc>
		{% for gallery in galleries %}
			{% assign images = gallery.album.images | sort: 'weight' | reverse %}
			{% for image in images %}
				<image:image>
					<image:title>{{ image.title[lang] }}</image:title>
					<image:loc>{{ site.productionUrl | append: 'assets/img/gallery/' | append: image.filename }}</image:loc>
					<image:caption>{{ image.description[lang] }}{% if image.size %} ({{ image.size }} cm){% endif %} - {{ site.title }}</image:caption>
					<image:license>http://creativecommons.org/licenses/by-nc-nd/4.0/</image:license>
				</image:image>
			{% endfor %}
		{% endfor %}
	</url>
</urlset>
