{% for item in collection | sort: 'weight' %}
  <article class="uk-article">
    <section class="uk-clearfix">
      {% if item.data.title %}
        <h2>{{ item.data.title }}</h2>
      {% endif %}
      {{ item.templateContent }}
    </section>
    {% if item.data.author %}
      <p class="uk-margin-remove uk-align-right" id="author">
        {{ item.data.author }}
      </p>
    {% endif %}
  </article>
{% endfor %}
